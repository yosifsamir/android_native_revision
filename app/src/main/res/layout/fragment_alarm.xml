<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".alarm.AlarmFragment">

    <TextView
        android:id="@+id/prayerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alfajr"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/prayerDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prayer Date"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/prayerDate2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prayer Date"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/setPrayerAlarmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Prayer Alarm"
        android:layout_marginTop="10dp"

        />
    <Button
        android:id="@+id/showNotificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Notification Button"
        android:layout_marginTop="10dp"

        />



</LinearLayout>